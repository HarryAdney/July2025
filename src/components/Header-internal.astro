<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out bg-black/80 backdrop-blur-md"
>
  <div class="container px-6 py-4 mx-auto">
    <div class="flex items-center justify-between">
      <a
        href="#"
        class="text-2xl font-bold font-display gold-accent animate-fadeIn"
        >Foresters Arms</a
      >
      <nav class="items-center hidden space-x-6 md:flex animate-fadeIn delay-1">
        <a href="./" class="text-gray-300 nav-link-hover">Home</a>
        <a href="./#about-us" class="text-gray-300 nav-link-hover">About Us</a>
        <a href="local-attractions" class="text-gray-300 nav-link-hover">Local Attractions</a>
        <a href="./history" class="text-gray-300 nav-link-hover">History</a>
        <a href="./#rooms" class="text-gray-300 nav-link-hover">Rooms</a>
        <a href="./#restaurant" class="text-gray-300 nav-link-hover"
          >Restaurant</a
        >
        <a href="#contact" class="text-gray-300 nav-link-hover">Contact</a>
        <a
          href="http://securebooking.eviivo.com/mywebsite/ForestersArmsDL8.home?viewname=onlinebooking"
          target="_blank"
          class="px-4 py-2 font-semibold text-black transition-colors duration-300 transform rounded-lg bg-gold-accent hover-gold-accent hover:scale-105"
          >Book Now</a
        >
      </nav>
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-gray-300 focus:outline-none"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <!-- Mobile Menu Panel -->
  <div
    id="mobile-menu"
    class="absolute left-0 right-0 hidden py-4 md:hidden top-full bg-gray-900/95 backdrop-blur-md"
  >
    <a
      href="#our-history"
      class="block px-4 py-2 text-center text-gray-200 transition-colors duration-300 hover:bg-gray-800"
      >Our Story</a
    >
    <a
      href="#rooms"
      class="block px-4 py-2 text-center text-gray-200 transition-colors duration-300 hover:bg-gray-800"
      >Rooms</a
    >
    <a
      href="#restaurant"
      class="block px-4 py-2 text-center text-gray-200 transition-colors duration-300 hover:bg-gray-800"
      >Restaurant</a
    >
    <a
      href="#contact"
      class="block px-4 py-2 text-center text-gray-200 transition-colors duration-300 hover:bg-gray-800"
      >Contact</a
    >
    <a
      href="http://securebooking.eviivo.com/mywebsite/ForestersArmsDL8.home?viewname=onlinebooking"
      target="_blank"
      class="block px-6 py-3 mx-4 mt-2 font-semibold text-center text-black transition-colors duration-300 rounded-lg bg-gold-accent hover-gold-accent"
      >Book Now</a
    >
  </div>
</header>
